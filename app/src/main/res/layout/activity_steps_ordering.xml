<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".stepsOrdering.StepsOrdering">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="210dp"
    android:textColor="#4169E1"
    android:textSize="32dp"
    android:text="Timer:" />

<Chronometer
    android:id="@+id/timer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#4169E1"
    android:textSize="32dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="300dp" />

<ImageView
    android:id="@+id/iv_1"
    android:layout_width="160dp"
    android:layout_height="100dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="100dp"
    android:src="@drawable/step1"/>

<ImageView
    android:id="@+id/iv_2"
    android:layout_width="160dp"
    android:layout_height="100dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="330dp"
    android:src="@drawable/step2"/>

<ImageView
    android:id="@+id/iv_3"
    android:layout_width="160dp"
    android:layout_height="100dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="250dp"
    android:layout_marginLeft="100dp"
    android:src="@drawable/step3"/>

<ImageView
    android:id="@+id/iv_4"
    android:layout_width="160dp"
    android:layout_height="100dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="250dp"
    android:layout_marginLeft="330dp"
    android:src="@drawable/step4"/>

<ImageView
    android:id="@+id/iv_5"
    android:layout_width="160dp"
    android:layout_height="100dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="400dp"
    android:layout_marginLeft="100dp"
    android:src="@drawable/step5"/>

<ImageView
    android:id="@+id/iv_6"
    android:layout_width="160dp"
    android:layout_height="100dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="400dp"
    android:layout_marginLeft="330dp"
    android:src="@drawable/step6"/>

<EditText
    android:id="@+id/order"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="200dp"
    android:layout_marginTop="550dp"
    android:ems="10"
    android:hint="input your order"
    android:textAlignment="center"
    android:inputType="number" />

<Button
    android:id="@+id/submit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="260dp"
    android:layout_marginTop="620dp"
    android:layout_marginRight="100dp"
    android:layout_weight="1"
    android:text="submit" />

<TextView
    android:id="@+id/result"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="260dp"
    android:layout_marginTop="700dp"
    android:layout_marginRight="150dp"
    android:textColor="#4169E1"
    android:textSize="20dp"
    android:text="your result" />

</RelativeLayout>